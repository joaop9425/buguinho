---
import "../index.css";

interface Props {
  title: string;
}

const year = new Date().getFullYear();

const { title } = Astro.props;

const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.ico`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Buguinho Memes</title>
  </head>
  <body
    class="bg-background text-foreground selection:bg-primary selection:text-white"
  >
    <!-- Navigation -->
    <nav
      class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-xl border-b border-border"
    >
      <div
        class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between"
      >
        <a href={`${base}/`} class="group flex items-center gap-3">
          <img
            src={`${base}images/joaninha-nobg.png`}
            alt="Buguinho Logo"
            class="w-10 h-10 object-contain group-hover:rotate-6 transition-transform"
          />
          <span
            class="font-display text-xl font-bold tracking-tighter uppercase"
            >Buguinho</span
          >
        </a>

        <div class="hidden md:flex items-center gap-8">
          <a
            href={`${base}/`}
            class="text-xs font-bold uppercase tracking-widest hover:text-primary transition-colors"
            >Home</a
          >
          <a
            href={`${base}about/`}
            class="text-xs font-bold uppercase tracking-widest hover:text-primary transition-colors"
            >About</a
          >
          <!-- <button
            class="bg-primary text-white text-[10px] font-bold uppercase tracking-[0.2em] px-6 py-3 rounded-full hover:bg-primary/90 transition-all cursor-pointer"
          >
            Subscribe
          </button> -->
        </div>

        <button
          class="md:hidden w-10 h-10 flex items-center justify-center border border-border rounded-lg"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </nav>

    <main class="min-h-screen pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-background border-t border-border mt-32">
      <div class="max-w-7xl mx-auto px-6 py-24">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
          <div class="md:col-span-2">
            <h3
              class="font-display text-3xl font-bold tracking-tighter uppercase mb-6"
            >
              Buguinho <span class="text-primary">Memes</span>
            </h3>
            <p class="text-muted-foreground text-sm max-w-sm leading-relaxed">
              Preservando o caos criativo do desenvolvimento moderno. Códigos,
              café e confusão mental transformados em entretenimento.
            </p>
          </div>
          <div>
            <h4
              class="font-display text-xs uppercase tracking-[0.2em] text-muted-foreground mb-6"
            >
              Explore
            </h4>
            <ul class="space-y-4">
              <li>
                <a
                  href={`${base}about/`}
                  class="text-sm font-medium hover:text-primary transition-colors"
                  >About</a
                >
              </li>
              <li>
                <a
                  href={`${base}timeline/`}
                  class="text-sm font-medium hover:text-primary transition-colors"
                  >Timeline</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h4
              class="font-display text-xs uppercase tracking-[0.2em] text-muted-foreground mb-6"
            >
              Connect
            </h4>
            <ul class="space-y-4">
              <li>
                <a
                  href="https://github.com/joaop9425/"
                  target="_blank"
                  class="text-sm font-medium hover:text-primary transition-colors"
                  >GitHub</a
                >
              </li>
            </ul>
          </div>
        </div>
        <div
          class="mt-24 pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-6"
        >
          <p
            class="text-[10px] font-medium text-muted-foreground uppercase tracking-widest"
          >
            © 2026 ~ {year} Buguinho Museum. All rights reserved.
          </p>
          <div class="flex gap-8">
            <a
              href={`${base}privacy/`}
              class="text-[10px] font-medium text-muted-foreground uppercase tracking-widest hover:text-primary"
              >Privacy</a
            >
            <a
              href={`${base}terms/`}
              class="text-[10px] font-medium text-muted-foreground uppercase tracking-widest hover:text-primary"
              >Terms</a
            >
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @keyframes reveal {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .reveal-item {
    opacity: 0;
    animation: reveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
</style>
