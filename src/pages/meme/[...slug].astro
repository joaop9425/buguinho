---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const memes = await getCollection("memes");
  return memes.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

/* ==============================
   URL ABSOLUTA (GitHub Pages safe)
================================ */
const SITE_URL = "https://joaop9425.github.io";
const BASE_URL = import.meta.env.BASE_URL;
const SLUG = entry.slug;
const base = import.meta.env.BASE_URL;

const SHARE_URL = `${SITE_URL}${BASE_URL}meme/${SLUG}/`;
---

<BaseLayout title={entry.data.title}>
  <div class="max-w-6xl mx-auto px-6 py-32">
    <a
      href={`${base}/`}
      class="group inline-flex items-center gap-2 text-primary font-bold text-[10px] uppercase tracking-[0.3em] mb-16 transition-all hover:-translate-x-2"
    >
      <svg
        class="w-4 h-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Archives
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
      <div class="lg:col-span-7 relative group">
        <div class="bg-muted border border-border overflow-hidden">
          {
            (() => {
              const url = entry.data.mediaUrl!.toLowerCase();
              if (url.endsWith(".mp4") || url.endsWith(".webm")) {
                return (
                  <video
                    src={entry.data.mediaUrl}
                    controls
                    autoplay
                    muted
                    loop
                    class="w-full h-auto"
                  />
                );
              } else if (
                url.includes("youtube.com") ||
                url.includes("youtu.be")
              ) {
                const videoId =
                  entry.data.mediaUrl!.split("v=")[1]?.split("&")[0] ||
                  entry.data.mediaUrl!.split("/").pop();
                return (
                  <div class="aspect-video w-full">
                    <iframe
                      class="w-full h-full"
                      src={`https://www.youtube.com/embed/${videoId}`}
                      frameborder="0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    />
                  </div>
                );
              } else if (url.includes("vimeo.com")) {
                const videoId = entry.data.mediaUrl!.split("/").pop();
                return (
                  <div class="aspect-video w-full">
                    <iframe
                      class="w-full h-full"
                      src={`https://player.vimeo.com/video/${videoId}`}
                      frameborder="0"
                      allow="autoplay; fullscreen; picture-in-picture"
                      allowfullscreen
                    />
                  </div>
                );
              } else {
                return (
                  <img
                    src={entry.data.mediaUrl}
                    alt={entry.data.title}
                    class="w-full h-auto transition-transform duration-700 hover:scale-105"
                    onerror="this.src='https://images.unsplash.com/photo-1550745165-9bc0b252726f?auto=format&fit=crop&q=80&w=800'"
                  />
                );
              }
            })()
          }
        </div>
        <!-- Decorative corner -->
        <div
          class="absolute -top-4 -right-4 w-24 h-24 bg-primary/5 -z-10 border border-primary/20"
        >
        </div>
      </div>

      <div class="lg:col-span-5">
        <div class="flex items-center gap-4 mb-10">
          <img
            src={entry.data.userPhoto}
            class="w-10 h-10 rounded-full border border-primary/20"
          />
          <div>
            <p
              class="text-primary font-bold text-[10px] tracking-widest uppercase"
            >
              {entry.data.username}
            </p>
            <p
              class="text-muted-foreground text-[9px] uppercase tracking-widest mt-1"
            >
              Found in {entry.data.pubDate}
            </p>
          </div>
        </div>

        <h1
          class="font-display text-5xl md:text-7xl font-bold tracking-tighter uppercase mb-8 leading-none"
        >
          {entry.data.title}
        </h1>

        <div
          class="prose prose-slate dark:prose-invert prose-primary max-w-none mb-12"
        >
          <Content />
        </div>

        <div class="pt-8 border-t border-border/50">
          <p
            class="text-[10px] font-bold uppercase tracking-[0.2em] text-muted-foreground mb-6"
          >
            Share Artifact
          </p>
          <div class="flex gap-4">
            {/* WhatsApp */}
            <a
              href={`https://api.whatsapp.com/send?text=${encodeURIComponent(
                `${entry.data.title} - ${SHARE_URL}`,
              )}/`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 flex items-center justify-center border border-border rounded-full text-foreground hover:text-[#25D366] hover:border-[#25D366] transition-all"
              title="Share on WhatsApp"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                ></path>
              </svg>
            </a>

            {/* Facebook */}
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(
                SHARE_URL,
              )}/`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 flex items-center justify-center border border-border rounded-full text-foreground hover:text-[#1877F2] hover:border-[#1877F2] transition-all"
              title="Share on Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                ></path>
              </svg>
            </a>

            {/* X (Twitter) */}
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(
                entry.data.title,
              )}&url=${encodeURIComponent(SHARE_URL)}/`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 flex items-center justify-center border border-border rounded-full text-foreground hover:text-white hover:border-white transition-all bg-transparent"
              title="Share on X"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style is:global>
  .prose-primary {
    --tw-prose-links: #3b82f6;
    --tw-prose-bold: currentColor;
    --tw-prose-headings: currentColor;
  }
</style>
