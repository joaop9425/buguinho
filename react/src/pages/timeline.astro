---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { MemeCard } from "../components/MemeCard";

const allMemes = await getCollection("memes");

// Sort by date descending
const sortedMemes = allMemes.sort(
    (a, b) =>
        new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime(),
);

// Get only one meme per date
const timelineMap = new Map();
sortedMemes.forEach((meme) => {
    if (!timelineMap.has(meme.data.pubDate)) {
        timelineMap.set(meme.data.pubDate, meme);
    }
});

const timelineDates = Array.from(timelineMap.keys());
---

<BaseLayout title="Timeline | Buguinho Archive">
    <main class="max-w-4xl mx-auto px-6 pt-32 pb-48">
        <header class="mb-24 text-center">
            <h1
                class="font-display text-5xl md:text-7xl font-bold uppercase tracking-tighter mb-6"
            >
                Temporal <br />
                <span class="text-primary italic">Sequence</span>
            </h1>
            <p
                class="text-muted-foreground uppercase tracking-[0.3em] text-[10px] font-bold"
            >
                {timelineDates.length} Eras chronicled in the database
            </p>
        </header>

        <div class="relative">
            <!-- Vertical Line -->
            <div
                class="absolute left-0 md:left-1/2 top-0 bottom-0 w-[1px] bg-gradient-to-b from-primary/50 via-border to-transparent transform md:-translate-x-1/2 hidden sm:block"
            >
            </div>

            <div class="space-y-32">
                {
                    timelineDates.map((date, index) => {
                        const meme = timelineMap.get(date);
                        const isEven = index % 2 === 0;

                        return (
                            <section class="relative">
                                {/* Connection Dot */}
                                <div class="absolute left-0 md:left-1/2 top-0 w-3 h-3 bg-primary rounded-full border-4 border-background transform -translate-x-1/2 z-10 hidden sm:block shadow-[0_0_15px_rgba(59,130,246,0.5)]" />

                                <div
                                    class={`flex flex-col ${isEven ? "md:flex-row" : "md:flex-row-reverse"} items-center gap-12`}
                                >
                                    {/* Date Side */}
                                    <div
                                        class={`w-full md:w-1/2 ${isEven ? "md:text-right" : "md:text-left"}`}
                                    >
                                        <time class="font-display text-4xl md:text-6xl font-bold text-foreground/20 hover:text-primary transition-colors cursor-default">
                                            {(() => {
                                                const [year, month, day] = date
                                                    .split("-")
                                                    .map(Number);
                                                return new Date(
                                                    year,
                                                    month - 1,
                                                    day,
                                                ).toLocaleDateString("pt-BR", {
                                                    day: "2-digit",
                                                    month: "short",
                                                });
                                            })()}
                                        </time>
                                        <div class="text-[10px] font-bold uppercase tracking-[0.2em] text-muted-foreground mt-2">
                                            {(() => {
                                                const [year, month, day] = date
                                                    .split("-")
                                                    .map(Number);
                                                return new Date(
                                                    year,
                                                    month - 1,
                                                    day,
                                                ).getFullYear();
                                            })()}
                                        </div>
                                    </div>

                                    {/* Content Side */}
                                    <div class="w-full md:w-1/2">
                                        <div class="reveal-item">
                                            <MemeCard
                                                client:visible
                                                title={meme.data.title}
                                                text={meme.data.text || ""}
                                                mediaUrl={
                                                    meme.data.mediaUrl || ""
                                                }
                                                userPhoto={
                                                    meme.data.userPhoto || ""
                                                }
                                                username={meme.data.username}
                                                slug={meme.slug}
                                                index={index}
                                            />
                                        </div>
                                    </div>
                                </div>
                            </section>
                        );
                    })
                }
            </div>
        </div>

        <!-- End Marker -->
        <div class="mt-48 text-center">
            <div class="inline-block px-8 py-4 border border-border bg-card">
                <p
                    class="font-display text-[10px] uppercase tracking-[0.5em] text-muted-foreground"
                >
                    End of Chronological Stream
                </p>
            </div>
        </div>
    </main>
</BaseLayout>

<style>
    .reveal-item {
        opacity: 0;
        transform: translateY(20px);
        animation: reveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    @keyframes reveal {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
